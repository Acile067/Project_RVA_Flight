<UserControl x:Class="RVA_Flight.Client.Views.AirplaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RVA_Flight.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">
    <Grid Margin="10">
        <StackPanel>
            <DataGrid ItemsSource="{Binding Airplanes}" 
                      AutoGenerateColumns="False" 
                      Height="200" 
                      Margin="0,0,0,10" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      CanUserResizeRows="False" 
                      CanUserReorderColumns="False" 
                      CanUserResizeColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding YearOfManufacture}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Code:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="100" Margin="0,0,5,0" Text="{Binding NewAirplane.Code, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="150" Margin="0,0,5,0" Text="{Binding NewAirplane.Name, UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Capacity:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="80" Margin="0,0,5,0" Text="{Binding NewAirplane.Capacity, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Content="Year:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="80" Margin="0,0,5,0" Text="{Binding NewAirplane.YearOfManufacture, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Add Airplane" Command="{Binding AddAirplaneCommand}" />
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
